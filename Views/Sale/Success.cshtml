@model SaleConfirmationViewModel
@{
    ViewData["Title"] = "Compra Exitosa";
}

<div class="text-center mb-4">
    @if (Model.Success)
    {
        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
        <h1 class="h2 text-success">¡Compra Exitosa!</h1>
        <p class="lead">Tu boleto ha sido generado correctamente</p>
    }
    else
    {
        <i class="fas fa-exclamation-circle fa-4x text-danger mb-3"></i>
        <h1 class="h2 text-danger">Error en la Compra</h1>
        <p class="lead">@Model.Message</p>
    }
</div>

@if (Model.Success)
{
    <!-- Success Content -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Receipt Summary -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>Resumen del Boleto
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Información del Pasajero</h6>
                            <p class="mb-1"><strong>Nombre:</strong> @Model.CustomerName</p>
                            <p class="mb-1"><strong>Documento:</strong> @Model.DocumentNumber</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Información del Viaje</h6>
                            <p class="mb-1"><strong>Ruta:</strong> @Model.TripInfo</p>
                            <p class="mb-1"><strong>Fecha:</strong> @Model.TripDepartureFormatted</p>
                            <p class="mb-1"><strong>Bus:</strong> @Model.BusInfo</p>
                        </div>
                    </div>

                    <hr>

                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <strong>Número de Recibo:</strong>
                                    <span class="badge bg-primary fs-6">@Model.ReceiptNumber</span>
                                </div>
                                <div class="me-3">
                                    <strong>Asiento:</strong>
                                    <span class="badge bg-success fs-6">@Model.SeatNumber</span>
                                </div>
                                <div>
                                    <strong>Monto:</strong>
                                    <span class="text-success fs-5 fw-bold">@Model.AmountFormatted</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <small class="text-muted">
                                Fecha de compra:<br>
                                @Model.SaleDateFormatted
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card">
                <div class="card-body">
                    <h6 class="mb-3">¿Qué quieres hacer ahora?</h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            @if (Model.CanDownloadReceipt)
                            {
                                <a href="@Url.Action("DownloadReceipt", new { saleId = Model.SaleId })"
                                   class="btn btn-success w-100">
                                    <i class="fas fa-download me-2"></i>Descargar Comprobante PDF
                                </a>
                            }
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-outline-info w-100" onclick="window.print()">
                                <i class="fas fa-print me-2"></i>Imprimir Comprobante
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("Index", "Trip")" class="btn btn-primary w-100">
                                <i class="fas fa-plus me-2"></i>Comprar Otro Boleto
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-home me-2"></i>Ir al Inicio
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Important Notice -->
            <div class="alert alert-info mt-4">
                <h6><i class="fas fa-info-circle me-2"></i>Información Importante</h6>
                <ul class="mb-0">
                    <li>Presenta tu documento de identidad al momento del viaje</li>
                    <li>Llega al terminal 30 minutos antes de la hora de salida</li>
                    <li>Conserva este comprobante durante todo el viaje</li>
                    <li>Para cambios o cancelaciones, contacta a nuestro servicio al cliente</li>
                </ul>
            </div>
        </div>
    </div>
}
else
{
    <!-- Error Content -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <p class="mb-4">@Model.Message</p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Trip")" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Volver a Viajes
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Ir al Inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
        @if (Model.Success)
        {
            <text>
                    // Auto-focus on download button
                    setTimeout(function() {
                        $('a[href*="DownloadReceipt"]').focus();
                    }, 1000);
            </text>
        }
        });
    </script>
}