@model List<SaleViewModel>
@{
    ViewData["Title"] = "Ventas del Día";
    var searchPerformed = ViewBag.SearchPerformed ?? false;
    var totalRevenue = Model.Sum(s => s.Amount);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2">Ventas del Día</h1>
        <p class="text-muted">@DateTime.Today.ToString("dd/MM/yyyy") - @Model.Count ventas realizadas</p>
    </div>
    <div>
        <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#searchModal">
            <i class="fas fa-search me-1"></i>Buscar
        </button>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Total Ventas</h5>
                <h2>@Model.Count</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Ingresos Total</h5>
                <h2>@totalRevenue.ToString("C")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5>Promedio</h5>
                <h2>@(Model.Any() ? (totalRevenue / Model.Count).ToString("C") : "S/ 0.00")</h2>
            </div>
        </div>
    </div>
</div>

<!-- Sales Table -->
<div class="card">
    <div class="card-header">
        <h5>Lista de Ventas</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Recibo</th>
                            <th>Cliente</th>
                            <th>Viaje</th>
                            <th>Asiento</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sale in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@sale.ReceiptNumber</strong>
                                    @if (sale.IsRecentSale)
                                    {
                                        <span class="badge bg-info ms-1">Nuevo</span>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <strong>@sale.CustomerName</strong>
                                        <br>
                                        <small class="text-muted">@sale.DocumentNumber</small>
                                    </div>
                                </td>
                                <td>
                                    <small>@sale.TripInfo</small>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@sale.SeatNumber</span>
                                </td>
                                <td>
                                    <strong class="text-success">@sale.AmountFormatted</strong>
                                </td>
                                <td>
                                    <div>
                                        @sale.SaleDateFormatted
                                        <br>
                                        <small class="text-muted">@sale.SaleTimeFormatted</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Confirmation", new { saleId = sale.Id })"
                                           class="btn btn-outline-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("DownloadReceipt", new { saleId = sale.Id })"
                                           class="btn btn-outline-success" title="Descargar PDF">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No hay ventas registradas</h4>
                <p class="text-muted">
                    @if (searchPerformed)
                    {
                        <span>No se encontraron ventas que coincidan con tu búsqueda.</span>
                    }
                    else
                    {
                        <span>Aún no se han realizado ventas hoy.</span>
                    }
                </p>
                <a href="@Url.Action("Index", "Trip")" class="btn btn-primary">
                    Ver Viajes Disponibles
                </a>
            </div>
        }
    </div>
</div>

<!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Buscar Ventas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Search" method="get">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="receiptNumber" class="form-label">Número de Recibo</label>
                        <input type="text" class="form-control" id="receiptNumber" name="receiptNumber"
                               placeholder="Ej: REC-20250812-123456-789">
                    </div>
                    <div class="mb-3">
                        <label for="customerDocument" class="form-label">Documento del Cliente</label>
                        <input type="text" class="form-control" id="customerDocument" name="customerDocument"
                               placeholder="Número de documento">
                    </div>
                    <div class="mb-3">
                        <label for="saleDate" class="form-label">Fecha de Venta</label>
                        <input type="date" class="form-control" id="saleDate" name="saleDate">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-refresh every 30 seconds
            setTimeout(function() {
                if (!$('#searchModal').hasClass('show')) {
                    location.reload();
                }
            }, 30000);
        });
    </script>
}