@model List<TripViewModel>
@{
    ViewData["Title"] = "Viajes Disponibles";
    var searchPerformed = ViewBag.SearchPerformed ?? false;
    var searchOrigin = ViewBag.SearchOrigin ?? "";
    var searchDestination = ViewBag.SearchDestination ?? "";
    var searchDate = ViewBag.SearchDate as DateTime?;
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 text-primary-custom mb-1">
                    <i class="fas fa-route me-2"></i>Viajes Disponibles
                </h1>
                <p class="text-muted mb-0">
                    @if (searchPerformed)
                    {
                        <span>Resultados de búsqueda - @Model.Count viajes encontrados</span>
                    }
                    else
                    {
                        <span>Viajes programados para hoy - @DateTime.Today.ToString("dd/MM/yyyy")</span>
                    }
                </p>
            </div>
            <div>
                <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#searchModal">
                    <i class="fas fa-search me-1"></i>Buscar Viajes
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Search Results Alert -->
@if (searchPerformed)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-search me-2"></i>
        <strong>Búsqueda aplicada:</strong>
        @if (!string.IsNullOrEmpty(searchOrigin))
        {
            <span class="badge bg-primary me-1">Origen: @searchOrigin</span>
        }
        @if (!string.IsNullOrEmpty(searchDestination))
        {
            <span class="badge bg-primary me-1">Destino: @searchDestination</span>
        }
        @if (searchDate.HasValue)
        {
            <span class="badge bg-primary me-1">Fecha: @searchDate.Value.ToString("dd/MM/yyyy")</span>
        }
        <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-primary ms-2">
            <i class="fas fa-times me-1"></i>Limpiar
        </a>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Quick Filters -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body py-3">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <h6 class="mb-2 mb-md-0">
                            <i class="fas fa-filter me-2"></i>Filtros Rápidos:
                        </h6>
                    </div>
                    <div class="col-md-9">
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary @(!searchPerformed ? "active" : "")">
                                <i class="fas fa-calendar-day me-1"></i>Hoy
                            </a>
                            <a href="@Url.Action("Search", new { departureDate = DateTime.Today.AddDays(1) })" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-calendar-plus me-1"></i>Mañana
                            </a>
                            <a href="@Url.Action("Search", new { onlyAvailable = true })" class="btn btn-sm btn-outline-success">
                                <i class="fas fa-check-circle me-1"></i>Solo Disponibles
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Trips Table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Lista de Viajes
                    </h5>
                    <div class="d-flex align-items-center">
                        <span class="text-muted me-3">@Model.Count viajes</span>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-secondary active" id="tableView">
                                <i class="fas fa-table"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" id="cardView">
                                <i class="fas fa-th-large"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.Any())
                {
                    <!-- Table View -->
                    <div id="tableViewContent">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Ruta</th>
                                        <th>Horarios</th>
                                        <th>Bus</th>
                                        <th>Precio</th>
                                        <th>Disponibilidad</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var trip in Model)
                                    {
                                        <tr class="@(trip.HasAvailableSeats ? "" : "table-warning")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-arrow-right text-primary me-2"></i>
                                                    <div>
                                                        <strong class="text-dark">@trip.RouteInfo</strong>
                                                        <br>
                                                        <small class="text-muted">
                                                            <i class="fas fa-road me-1"></i>@trip.DurationFormatted
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong class="text-success">
                                                        <i class="fas fa-plane-departure me-1"></i>@trip.DepartureTime.ToString("HH:mm")
                                                    </strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="fas fa-plane-arrival me-1"></i>@trip.ArrivalTime.ToString("HH:mm")
                                                    </small>
                                                </div>
                                                @if (trip.IsDepartureSoon)
                                                {
                                                    <br>

                                                    <span class="badge bg-warning text-dark">Próximo</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@trip.BusInfo</small>
                                                <br>
                                                <span class="badge bg-info">@trip.TotalSeats asientos</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success fs-5">@trip.PriceFormatted</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center mb-1">
                                                    <span class="@trip.AvailabilityClass fw-semibold me-2">
                                                        @trip.AvailableSeats/@trip.TotalSeats
                                                    </span>
                                                    <small class="text-muted">(@trip.PercentageOccupiedFormatted)</small>
                                                </div>
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar @(trip.HasAvailableSeats ? "bg-success" : "bg-danger")"
                                                         style="width: @(trip.PercentageOccupied)%"></div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="@trip.StatusBadgeClass">@trip.StatusText</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("Details", new { id = trip.Id })"
                                                       class="btn btn-outline-primary"
                                                       title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (trip.HasAvailableSeats)
                                                    {
                                                        <a href="@Url.Action("SelectSeat", "Seat", new { tripId = trip.Id })"
                                                           class="btn btn-success"
                                                           title="Seleccionar asiento">
                                                            <i class="fas fa-chair"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-outline-secondary" disabled title="Sin disponibilidad">
                                                            <i class="fas fa-ban"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Card View -->
                    <div id="cardViewContent" style="display: none;">
                        <div class="row g-3 p-3">
                            @foreach (var trip in Model)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 @(trip.HasAvailableSeats ? "border-success" : "border-warning")">
                                        <div class="card-header bg-white">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0 text-primary-custom">@trip.RouteInfo</h6>
                                                <span class="@trip.StatusBadgeClass">@trip.StatusText</span>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <small class="text-muted">Salida</small>
                                                    <div class="fw-bold">@trip.DepartureTime.ToString("HH:mm")</div>
                                                </div>
                                                <div class="col-6">
                                                    <small class="text-muted">Llegada</small>
                                                    <div class="fw-bold">@trip.ArrivalTime.ToString("HH:mm")</div>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <small class="text-muted">Disponibilidad</small>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="@trip.AvailabilityClass">@trip.AvailableSeats/@trip.TotalSeats</span>
                                                    <small class="text-muted">@trip.PercentageOccupiedFormatted</small>
                                                </div>
                                                <div class="progress mt-1" style="height: 4px;">
                                                    <div class="progress-bar @(trip.HasAvailableSeats ? "bg-success" : "bg-danger")"
                                                         style="width: @(trip.PercentageOccupied)%"></div>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <small class="text-muted">Bus</small>
                                                <div>@trip.BusInfo</div>
                                            </div>
                                            <div class="text-center">
                                                <div class="fs-4 fw-bold text-success mb-3">@trip.PriceFormatted</div>
                                                <div class="btn-group w-100" role="group">
                                                    <a href="@Url.Action("Details", new { id = trip.Id })"
                                                       class="btn btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i>Detalles
                                                    </a>
                                                    @if (trip.HasAvailableSeats)
                                                    {
                                                        <a href="@Url.Action("SelectSeat", "Seat", new { tripId = trip.Id })"
                                                           class="btn btn-success">
                                                            <i class="fas fa-chair me-1"></i>Seleccionar
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-bus fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay viajes disponibles</h4>
                        <p class="text-muted mb-4">
                            @if (searchPerformed)
                            {
                                <span>No se encontraron viajes que coincidan con tu búsqueda.</span>
                            }
                            else
                            {
                                <span>No hay viajes programados para hoy.</span>
                            }
                        </p>
                        <a href="@Url.Action("Index")" class="btn btn-primary">
                            <i class="fas fa-refresh me-2"></i>Actualizar
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-search me-2"></i>Buscar Viajes
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Search" method="get">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="origin" class="form-label">Origen</label>
                        <input type="text" class="form-control" id="origin" name="origin"
                               value="@searchOrigin" placeholder="Ciudad de origen">
                    </div>
                    <div class="mb-3">
                        <label for="destination" class="form-label">Destino</label>
                        <input type="text" class="form-control" id="destination" name="destination"
                               value="@searchDestination" placeholder="Ciudad de destino">
                    </div>
                    <div class="mb-3">
                        <label for="departureDate" class="form-label">Fecha de Viaje</label>
                        <input type="date" class="form-control" id="departureDate" name="departureDate"
                               value="@(searchDate?.ToString("yyyy-MM-dd") ?? "")">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="onlyAvailable" name="onlyAvailable" value="true">
                        <label class="form-check-label" for="onlyAvailable">
                            Solo mostrar viajes con asientos disponibles
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Toggle between table and card view
            $('#cardView').click(function() {
                $('#tableViewContent').hide();
                $('#cardViewContent').show();
                $('#tableView').removeClass('active');
                $(this).addClass('active');
            });

            $('#tableView').click(function() {
                $('#cardViewContent').hide();
                $('#tableViewContent').show();
                $('#cardView').removeClass('active');
                $(this).addClass('active');
            });

            // Auto-refresh every 2 minutes
            setTimeout(function() {
                location.reload();
            }, 120000);

            // Set minimum date to today
            $('#departureDate').attr('min', new Date().toISOString().split('T')[0]);
        });
    </script>
}