<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TransportAgency</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS - CRÍTICO: debe ir después de Bootstrap -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Estilos inline temporales para debugging -->
    <style>
        /* Verificación que el CSS se carga */
        body {
            background: radial-gradient(125% 125% at 50% 10%, #000000 40%, #0d1a36 100%) !important;
            color: white !important;
            min-height: 100vh;
        }

        .test-gold {
            color: rgb(197, 167, 80) !important;
        }
    </style>
</head>
<body>
    <!-- Elemento de prueba para verificar que el CSS funciona -->
    <div class="test-gold" style="position: fixed; top: 10px; right: 10px; z-index: 9999; background: rgba(0,0,0,0.8); padding: 5px;">
        CSS Test: Si ves esto en dorado, el CSS básico funciona
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top" style="background: rgba(20, 20, 20, 0.95) !important;">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="color: rgb(197, 167, 80) !important;">
                <i class="fas fa-bus me-2"></i>TransportAgency
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Trip" asp-action="Index">
                            <i class="fas fa-route me-1"></i>Viajes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Sale" asp-action="Index">
                            <i class="fas fa-ticket-alt me-1"></i>Ventas
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>Administración
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-chart-bar me-2"></i>Reportes</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Configuración</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy"><i class="fas fa-shield-alt me-2"></i>Privacidad</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <!-- Main Content -->
    <main class="main-content" style="padding: 2rem 0; min-height: calc(100vh - 160px);">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto" style="background: linear-gradient(135deg, rgb(20, 20, 20), #0d1a36); color: white; border-top: 1px solid rgb(197, 167, 80);">
        <div class="container">
            <div class="row py-4">
                <div class="col-md-4 mb-3">
                    <h5 class="mb-3" style="color: rgb(197, 167, 80);">
                        <i class="fas fa-bus me-2"></i>TransportAgency
                    </h5>
                    <p class="mb-2">Tu agencia de confianza para viajes seguros y cómodos por todo el Perú.</p>
                    <p class="mb-0">
                        <small style="color: rgba(255, 255, 255, 0.7);">Conectando destinos desde 2025</small>
                    </p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="mb-3" style="color: rgb(197, 167, 80);">Contacto</h6>
                    <p class="mb-2">
                        <i class="fas fa-map-marker-alt me-2" style="color: rgb(197, 167, 80);"></i>
                        Av. Principal 123, Lima, Perú
                    </p>
                    <p class="mb-2">
                        <i class="fas fa-phone me-2" style="color: rgb(197, 167, 80);"></i>
                        +51 123 456 789
                    </p>
                    <p class="mb-0">
                        <i class="fas fa-envelope me-2" style="color: rgb(197, 167, 80);"></i>
                        info@transportagency.com
                    </p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="mb-3" style="color: rgb(197, 167, 80);">Enlaces Rápidos</h6>
                    <ul class="list-unstyled">
                        <li class="mb-1"><a href="#" style="color: rgba(255, 255, 255, 0.7); text-decoration: none;">Términos y Condiciones</a></li>
                        <li class="mb-1"><a href="#" style="color: rgba(255, 255, 255, 0.7); text-decoration: none;">Política de Privacidad</a></li>
                        <li class="mb-1"><a href="#" style="color: rgba(255, 255, 255, 0.7); text-decoration: none;">Preguntas Frecuentes</a></li>
                        <li class="mb-1"><a href="#" style="color: rgba(255, 255, 255, 0.7); text-decoration: none;">Soporte al Cliente</a></li>
                    </ul>
                </div>
            </div>
            <hr style="border-color: rgba(197, 167, 80, 0.3);">
            <div class="row align-items-center py-3">
                <div class="col-md-6">
                    <p class="mb-0" style="color: rgba(255, 255, 255, 0.7);">&copy; 2025 - TransportAgency - Todos los derechos reservados</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="social-links">
                        <a href="#" class="me-3" style="color: rgba(255, 255, 255, 0.7);"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-3" style="color: rgba(255, 255, 255, 0.7);"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-3" style="color: rgba(255, 255, 255, 0.7);"><i class="fab fa-instagram"></i></a>
                        <a href="#" style="color: rgba(255, 255, 255, 0.7);"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function() {
            console.log('Layout loaded successfully');
            console.log('CSS file path:', '@Url.Content("~/css/site.css")');

            // Verificar si el CSS se cargó
            setTimeout(function() {
                var testElement = $('.test-gold');
                var color = testElement.css('color');
                console.log('Test element color:', color);

                // Si el color no es dorado, hay un problema con el CSS
                if (!color.includes('197, 167, 80') && !color.includes('rgb(197, 167, 80)')) {
                    console.error('CSS personalizado no se cargó correctamente');
                    alert('⚠️ Los estilos personalizados no se cargaron. Verifica el archivo site.css');
                }
            }, 1000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>