<!-- Views/Admin/ViewSale.cshtml -->
@model ConfirmationViewModel
@{
    ViewData["Title"] = "Detalles de la Venta";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Detalles de la Venta</h1>
    <div>
        <a href="@Url.Action("EditSale", new { id = Model.SaleId })" class="btn btn-warning me-2">
            <i class="fas fa-edit me-1"></i>Editar
        </a>
        <a href="@Url.Action("Sales")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Volver
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-ticket-alt me-2"></i>Información del Boleto</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Datos del Pasajero</h6>
                        <table class="table table-borderless">
                            <tr><td><strong>Nombre:</strong></td><td>@Model.PassengerName</td></tr>
                            <tr><td><strong>Documento:</strong></td><td>@Model.DocumentNumber</td></tr>
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <tr><td><strong>Teléfono:</strong></td><td>@Model.Phone</td></tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <tr><td><strong>Email:</strong></td><td>@Model.Email</td></tr>
                            }
                        </table>
                    </div>
                    
                    <div class="col-md-6">
                        <h6>Datos del Viaje</h6>
                        <table class="table table-borderless">
                            <tr><td><strong>Ruta:</strong></td><td>@Model.RouteInfo</td></tr>
                            <tr><td><strong>Fecha:</strong></td><td>@Model.TravelDateFormatted</td></tr>
                            <tr><td><strong>Salida:</strong></td><td>@Model.DepartureTime</td></tr>
                            <tr><td><strong>Llegada:</strong></td><td>@Model.ArrivalTime</td></tr>
                            <tr><td><strong>Asiento:</strong></td><td><span class="badge bg-primary">@Model.SeatNumber</span></td></tr>
                            <tr><td><strong>Precio:</strong></td><td><strong class="text-success">@Model.PriceFormatted</strong></td></tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-info-circle me-2"></i>Información de la Compra</h6>
            </div>
            <div class="card-body">
                <p><strong>Número de Boleto:</strong><br>
                   <span class="text-primary">@Model.TicketNumber</span></p>
                
                <p><strong>Fecha de Compra:</strong><br>
                   @Model.PurchaseDateFormatted</p>
                
                <p><strong>Total Pagado:</strong><br>
                   <span class="text-success h4">@Model.PriceFormatted</span></p>
                
                <hr>
                
                <div class="d-grid">
                    <a href="@Url.Action("DownloadPdf", "Ticket", new { id = Model.SaleId })" 
                       class="btn btn-primary">
                        <i class="fas fa-download me-2"></i>Descargar PDF
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-cog me-2"></i>Acciones</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("EditSale", new { id = Model.SaleId })" 
                       class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Editar Venta
                    </a>
                    
                    <button type="button" class="btn btn-danger" 
                            onclick="confirmDelete(@Model.SaleId)">
                        <i class="fas fa-trash me-2"></i>Eliminar Venta
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar esta venta? Esta acción no se puede deshacer.
                <br><br>
                <strong>Boleto:</strong> @Model.TicketNumber<br>
                <strong>Pasajero:</strong> @Model.PassengerName
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(saleId) {
            document.getElementById('deleteForm').action = '@Url.Action("DeleteSale")/' + saleId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}