@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold">
            <i class="fas fa-tachometer-alt me-2" style="color: var(--color-primary);"></i>
            Dashboard Administrativo
        </h1>
        <p class="text-muted mb-0">Panel de control y estadísticas</p>
    </div>
    <div class="d-flex gap-2">
        <a href="@Url.Action("Sales")" class="btn btn-primary">
            <i class="fas fa-list me-1"></i>Ver Todas las Ventas
        </a>
        <a href="@Url.Action("Logout")" class="btn btn-outline-danger">
            <i class="fas fa-sign-out-alt me-1"></i>Cerrar Sesión
        </a>
    </div>
</div>

<!-- Tarjetas de estadísticas -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-0 h-100" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);">
            <div class="card-body text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold">@Model.TotalSales</h3>
                        <p class="mb-0 opacity-75">Total Ventas</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-ticket-alt fa-3x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <small class="opacity-75">
                        <i class="fas fa-chart-line me-1"></i>Todos los tiempos
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-0 h-100 bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold">@Model.TotalRevenueFormatted</h3>
                        <p class="mb-0 opacity-75">Ingresos Totales</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-3x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <small class="opacity-75">
                        <i class="fas fa-coins me-1"></i>Acumulado
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-0 h-100 bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold">@Model.TodaySales</h3>
                        <p class="mb-0 opacity-75">Ventas Hoy</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-calendar-day fa-3x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <small class="opacity-75">
                        <i class="fas fa-clock me-1"></i>@DateTime.Today.ToString("dd/MM/yyyy")
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-0 h-100 bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold">@Model.TodayRevenueFormatted</h3>
                        <p class="mb-0 opacity-75">Ingresos Hoy</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-coins fa-3x opacity-75"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <small class="opacity-75">
                        <i class="fas fa-trending-up me-1"></i>Diario
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ventas recientes -->
<div class="card border-0 shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-clock me-2"></i>Ventas Recientes
            </h5>
            <a href="@Url.Action("Sales")" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-eye me-1"></i>Ver Todas
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (Model.RecentSales.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="border-0">
                                <i class="fas fa-ticket-alt me-1"></i>Boleto
                            </th>
                            <th class="border-0">
                                <i class="fas fa-user me-1"></i>Pasajero
                            </th>
                            <th class="border-0">
                                <i class="fas fa-route me-1"></i>Ruta
                            </th>
                            <th class="border-0">
                                <i class="fas fa-calendar me-1"></i>Fecha Viaje
                            </th>
                            <th class="border-0">
                                <i class="fas fa-chair me-1"></i>Asiento
                            </th>
                            <th class="border-0">
                                <i class="fas fa-dollar-sign me-1"></i>Precio
                            </th>
                            <th class="border-0">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sale in Model.RecentSales)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold text-primary">@sale.TicketNumber</span>
                                </td>
                                <td>
                                    <div>
                                        <div class="fw-semibold">@sale.PassengerName</div>
                                        <small class="text-muted">
                                            <i class="fas fa-id-card me-1"></i>@sale.DocumentNumber
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">@sale.Route</span>
                                </td>
                                <td>
                                    <span class="fw-semibold">@sale.TravelDateFormatted</span>
                                </td>
                                <td>
                                    <span class="badge" style="background: var(--color-primary); color: white;">
                                        @sale.SeatNumber
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">@sale.PriceFormatted</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("ViewSale", new { id = sale.Id })"
                                           class="btn btn-outline-info" title="Ver Detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("EditSale", new { id = sale.Id })"
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No hay ventas registradas</h4>
                <p class="text-muted">Las ventas aparecerán aquí una vez que se realicen compras</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Ir al sitio principal
                </a>
            </div>
        }
    </div>
</div>

<!-- Información adicional -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card border-0 h-100" style="background: rgba(197, 167, 80, 0.1);">
            <div class="card-body">
                <h6 class="fw-bold mb-3">
                    <i class="fas fa-info-circle me-2" style="color: var(--color-primary);"></i>
                    Accesos Rápidos
                </h6>
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Sales")" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-list me-2"></i>Gestionar Ventas
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-home me-2"></i>Ver Sitio Principal
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 h-100" style="background: rgba(132, 76, 68, 0.1);">
            <div class="card-body">
                <h6 class="fw-bold mb-3">
                    <i class="fas fa-chart-bar me-2" style="color: var(--color-accent);"></i>
                    Resumen del Día
                </h6>
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="fw-bold mb-1" style="color: var(--color-primary);">@Model.TodaySales</h4>
                            <small class="text-muted">Ventas</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="fw-bold mb-1 text-success">@Model.TodayRevenueFormatted</h4>
                        <small class="text-muted">Ingresos</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>