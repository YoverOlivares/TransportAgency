<!-- Views/Admin/Dashboard.cshtml -->
@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Dashboard Administrativo</h1>
    <div>
        <a href="@Url.Action("Sales")" class="btn btn-primary me-2">Ver Todas las Ventas</a>
        <a href="@Url.Action("Logout")" class="btn btn-outline-danger">
            <i class="fas fa-sign-out-alt me-1"></i>Cerrar Sesión
        </a>
    </div>
</div>

<!-- Tarjetas de estadísticas -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalSales</h4>
                        <p class="mb-0">Total Ventas</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-ticket-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalRevenueFormatted</h4>
                        <p class="mb-0">Ingresos Totales</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TodaySales</h4>
                        <p class="mb-0">Ventas Hoy</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-calendar-day fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TodayRevenueFormatted</h4>
                        <p class="mb-0">Ingresos Hoy</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-coins fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ventas recientes -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5><i class="fas fa-clock me-2"></i>Ventas Recientes</h5>
            <a href="@Url.Action("Sales")" class="btn btn-sm btn-outline-primary">Ver Todas</a>
        </div>
    </div>
    <div class="card-body">
        @if (Model.RecentSales.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Boleto</th>
                            <th>Pasajero</th>
                            <th>Ruta</th>
                            <th>Fecha Viaje</th>
                            <th>Asiento</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sale in Model.RecentSales)
                        {
                            <tr>
                                <td>@sale.TicketNumber</td>
                                <td>
                                    @sale.PassengerName
                                    <br>
                                    <small class="text-muted">@sale.DocumentNumber</small>
                                </td>
                                <td>@sale.Route</td>
                                <td>@sale.TravelDateFormatted</td>
                                <td><span class="badge bg-primary">@sale.SeatNumber</span></td>
                                <td>@sale.PriceFormatted</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("ViewSale", new { id = sale.Id })"
                                           class="btn btn-outline-info" title="Ver">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("EditSale", new { id = sale.Id })"
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">No hay ventas registradas aún</p>
            </div>
        }
    </div>
</div>