<!-- Views/Admin/EditSale.cshtml -->
@model EditSaleViewModel
@{
    ViewData["Title"] = "Editar Venta";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Editar Venta</h1>
    <a href="@Url.Action("Sales")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Volver a Ventas
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-edit me-2"></i>Modificar Datos</h5>
            </div>
            <div class="card-body">
                <form asp-action="EditSale" method="post">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="TicketNumber" type="hidden" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PassengerName" class="form-label">Nombre del Pasajero</label>
                            <input asp-for="PassengerName" class="form-control" required />
                            <span asp-validation-for="PassengerName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DocumentNumber" class="form-label">Número de Documento</label>
                            <input asp-for="DocumentNumber" class="form-control" required />
                            <span asp-validation-for="DocumentNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label">Teléfono</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Origin" class="form-label">Origen</label>
                            <input asp-for="Origin" class="form-control" required />
                            <span asp-validation-for="Origin" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Destination" class="form-label">Destino</label>
                            <input asp-for="Destination" class="form-control" required />
                            <span asp-validation-for="Destination" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="TravelDate" class="form-label">Fecha de Viaje</label>
                            <input asp-for="TravelDate" class="form-control" type="date" required />
                            <span asp-validation-for="TravelDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="SeatNumber" class="form-label">Número de Asiento</label>
                            <input asp-for="SeatNumber" class="form-control" required />
                            <span asp-validation-for="SeatNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="TravelTime" class="form-label">Hora de Viaje</label>
                            <input asp-for="TravelTime" class="form-control" placeholder="ej: 14:00" required />
                            <span asp-validation-for="TravelTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Precio</label>
                        <div class="input-group">
                            <span class="input-group-text">S/</span>
                            <input asp-for="Price" class="form-control" step="0.01" type="number" required />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Sales")" class="btn btn-outline-secondary me-md-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-info-circle me-2"></i>Información del Boleto</h6>
            </div>
            <div class="card-body">
                <p><strong>Número de Boleto:</strong><br>@Model.TicketNumber</p>
                <p><strong>Precio Actual:</strong><br><span class="text-success h5">@Model.PriceFormatted</span></p>
                <hr>
                <small class="text-muted">
                    Los cambios se aplicarán inmediatamente. Asegúrese de que los datos sean correctos antes de guardar.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}