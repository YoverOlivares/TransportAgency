<!-- Views/Home/Index.cshtml - Búsqueda inicial -->
@model TripSearchViewModel
@{
    ViewData["Title"] = "Buscar Viajes";
}

<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-4 mb-3">¡Viaja con Comodidad!</h1>
        <p class="lead">Encuentra y reserva tu próximo viaje de manera fácil y segura</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-search me-2"></i>Buscar Viajes</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SearchTrips" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Origin" class="form-label">Ciudad de Origen</label>
                                <select asp-for="Origin" class="form-select" required>
                                    <option value="">Seleccione origen</option>
                                    @foreach (var city in ViewBag.Cities as List<string>)
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <span asp-validation-for="Origin" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Destination" class="form-label">Ciudad de Destino</label>
                                <select asp-for="Destination" class="form-select" required>
                                    <option value="">Seleccione destino</option>
                                    @foreach (var city in ViewBag.Cities as List<string>)
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <span asp-validation-for="Destination" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TravelDate" class="form-label">Fecha de Viaje</label>
                                <input asp-for="TravelDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="TravelDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-search me-2"></i>Buscar Viajes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Información adicional -->
    <div class="row mt-5">
        <div class="col-md-4 text-center mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <h5>Viajes Seguros</h5>
                    <p>Buses modernos con todas las medidas de seguridad</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <i class="fas fa-clock fa-3x text-success mb-3"></i>
                    <h5>Puntualidad</h5>
                    <p>Salidas puntuales y horarios garantizados</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <i class="fas fa-heart fa-3x text-danger mb-3"></i>
                    <h5>Comodidad</h5>
                    <p>Asientos cómodos para un viaje placentero</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function() {
            // Validar que origen y destino sean diferentes
            $('select[name="Origin"], select[name="Destination"]').change(function() {
                var origin = $('select[name="Origin"]').val();
                var destination = $('select[name="Destination"]').val();

                if (origin && destination && origin === destination) {
                    alert('El origen y destino deben ser diferentes');
                    $(this).val('');
                }
            });
        });
    </script>
}