<!-- Views/Home/PurchaseConfirmation.cshtml - Confirmación final -->
@model ConfirmationViewModel
@{
    ViewData["Title"] = "Compra Exitosa";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-success text-white text-center">
                    <h3><i class="fas fa-check-circle me-2"></i>¡Compra Exitosa!</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h4>Boleto N°: <span class="text-primary">@Model.TicketNumber</span></h4>
                        <p class="text-muted">Fecha de compra: @Model.PurchaseDateFormatted</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Información del Pasajero</h5>
                            <table class="table table-borderless">
                                <tr><td><strong>Nombre:</strong></td><td>@Model.PassengerName</td></tr>
                                <tr><td><strong>Documento:</strong></td><td>@Model.DocumentNumber</td></tr>
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    <tr><td><strong>Teléfono:</strong></td><td>@Model.Phone</td></tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <tr><td><strong>Email:</strong></td><td>@Model.Email</td></tr>
                                }
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h5>Información del Viaje</h5>
                            <table class="table table-borderless">
                                <tr><td><strong>Ruta:</strong></td><td>@Model.RouteInfo</td></tr>
                                <tr><td><strong>Fecha:</strong></td><td>@Model.TravelDateFormatted</td></tr>
                                <tr><td><strong>Salida:</strong></td><td>@Model.DepartureTime</td></tr>
                                <tr><td><strong>Llegada:</strong></td><td>@Model.ArrivalTime</td></tr>
                                <tr><td><strong>Asiento:</strong></td><td>@Model.SeatNumber</td></tr>
                                <tr><td><strong>Precio:</strong></td><td><strong class="text-success">@Model.PriceFormatted</strong></td></tr>
                            </table>
                        </div>
                    </div>

                    <hr>

                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-2"></i>Instrucciones importantes:</h6>
                        <ul class="mb-0">
                            <li>Llegue al terminal 30 minutos antes de la salida</li>
                            <li>Presente su documento de identidad junto con el boleto</li>
                            <li>Conserve este boleto durante todo el viaje</li>
                            <li>En caso de dudas, comuníquese con nosotros</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("DownloadPdf", "Ticket", new { id = Model.SaleId })"
                           class="btn btn-primary btn-lg me-md-2">
                            <i class="fas fa-download me-2"></i>Descargar PDF
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-outline-success btn-lg">
                            <i class="fas fa-home me-2"></i>Volver al Inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>